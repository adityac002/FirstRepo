package example;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.testng.Assert;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;

public class Logout{
	
	
  @Test(dependsOnMethods={"submitButton"})
 
  public void clickLogout() {
	  
		Login.driver.findElement(By.xpath("//button[contains(@class,'logout')]")).click();
	
	
  }
  @Test(dependsOnMethods= {"clickLogout"})
  public void verifyLogout() {
	  String sign[]=Login.driver.findElement(By.xpath("//form[contains(@class,'form')]/h1")).getText().split(" ");
	  int flag=0;
	  for(String s:sign) {
		  if(s.contains("Sign")) {
			  flag++;
		  }
	  }
	  
	  Assert.assertEquals(true, flag==1);
  }
}
