package example;

import org.openqa.selenium.By;
import org.testng.Assert;
import org.testng.annotations.Test;

public class Logout extends Login{
  @Test(dependsOnMethods={"submitButton"}, groups="mendatory")
 
  public void clickLogout() {
	  driver.findElement(By.xpath("//button[contains(@class,'logout')]")).click();
  }
  @Test(dependsOnMethods= {"clickLogout"}, groups="mendatory")
  public void verifyLogout() {
	  String sign[]=driver.findElement(By.xpath("//form[contains(@class,'form')]/h1")).getText().split(" ");
	  int flag=0;
	  for(String s:sign) {
		  if(s.contains("Sign")) {
			  flag++;
		  }
	  }
	  
	  Assert.assertEquals(true, flag==1);
  }
}
