package example;

import org.testng.annotations.Test;



import org.testng.annotations.Parameters;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.Assert;
import org.testng.annotations.AfterSuite;
import org.testng.annotations.AfterTest;
import org.testng.annotations.BeforeGroups;
import org.testng.annotations.BeforeSuite;

public class Login {
	public WebDriver driver;
  @Test(priority=1)
  public void launchURL() {
	  driver.get("https://rahulshettyacademy.com/locatorspractice/");
  }
  
  @Test(priority=2)
  @Parameters("name")
  public void sendUserName(String names) {
	  driver.findElement(By.xpath("//input[@placeholder='Username']")).sendKeys(names);
  }
  
  @Test(priority=3)
  @Parameters("password")
  public void sendPassword(String pass) {
	  driver.findElement(By.cssSelector("input[placeholder='Password']")).sendKeys(pass);
  }
  
  @Test(priority=4, enabled=false)
  public void selectCheckBox() {
	  driver.findElement(By.xpath("//input[@value='rmbrUsername']")).click();
	  driver.findElement(By.xpath("//input[@value='agreeTerms']")).click();
	  
  }
  
  @Test(dependsOnMethods="selectCheckBox")
  public void submitButton() {
	  //WebDriverWait wait=new WebDriverWait(driver,Duration.ofSeconds(10));
	  //WebElement submit=wait.until(ExpectedConditions.elementToBeClickable(By.xpath("//button[@type='submit']")));
	  driver.findElement(By.className("signInBtn")).click();
	  	
	  
  }
  
  @Test(dependsOnMethods="submitButton")
  @Parameters("name")
  public void verifyLogin(String names) throws InterruptedException {
	  Thread.sleep(3000);
	  String []getName=driver.findElement(By.xpath("//div[contains(@class,'login')]/h2")).getText().split(" ");
	  int flag=0;
	  for(String s:getName) {
		  if(s.equalsIgnoreCase(names)) {
			  flag++;
		  }
	  }
	  Assert.assertEquals(false, flag==1);
	  
  }
  
  @BeforeSuite
  public void beforeTest() {
	  System.setProperty("webdriver.gecko.driver", "D:\\Testing Software\\geckodriver.exe");
	  driver=new FirefoxDriver();
	  driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(6));
	  driver.manage().window().maximize();
	  
	  
  }

	@AfterSuite
	public void afterTest() { 
		driver.close(); 
		}
	
	 

}
